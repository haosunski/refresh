<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <h1>EJS Tags</h1>
    <img src="/images/cat.png" alt="">
    <p>
        <% for(const [i,o] of Object.entries(locals)){ %>
            <div><%= i %>: </div>
        <% } %>
    </p>
    <p>current seconds <%= dataa.seconds %></p>
    <p>local: <%= tttf %></p>
    <p>fff: <%= fff %></p>
    <% if(dataa.seconds % 2 === 0) { %>
        <ul>
            <% for(let i of dataa.items) { %>
                <li><%= i %></li>
            <% } %>
        </ul>
    <% }else { %>
        <p>no item to display</p>
    <% } %>
    <%- dataa.htmlContent %>
    <%- include("footer") %>
    <% if (dataa.l) { %>
        <h2><%= dataa.l %></h2>
    <% } else{ %>
        <h2>enter your name</h2>
    <% } %>
    <form action="/" method="post">
        <input type="text" name="fName">
        <input type="text" name="lName">
        <input type="submit" value="submit">
    </form>
</body>
</html>